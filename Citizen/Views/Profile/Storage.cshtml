@model UserStorageViewModel
@{
    ViewData["Title"] = "Your storage";
    var capacityUsePercent = (int)(((double)@Model.CapacityUsed / (double)@Model.Capacity) * 100);

    var usageBarColor = "progress-bar-success";
    if (capacityUsePercent > 60)
    {
        usageBarColor = "progress-bar-warning";
    }
    if (capacityUsePercent > 80)
    {
        usageBarColor = "progress-bar-danger";
    }
}

<h2>@ViewData["Title"]</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>

<div>
    <a asp-controller="Profile" asp-action="ExtendStorage" class="btn btn-primary">Extend (+@Model.ExtensionCapacity storage, -@Model.ExtensionCost money)</a>
    <hr />
    <div style="width: 100%; margin: auto">
        <div class="progress">
            <div class="progress-bar @usageBarColor" role="progressbar" style="width: @capacityUsePercent%">
                <span>@Model.CapacityUsed / @Model.Capacity</span>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-2">
            <div class="well well-sm text-center">
                <h4>(on market)</h4>
                <hr/>
                <img src="@Url.Content("~/images/MarketPlaceholder.png")" height="64" width="64" alt="market-placeholder"/>
                <hr/>
                <div class="well well-sm">
                    @Model.MarketPlaceholder
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="well well-sm text-center">
                <h4>Food</h4>
                <hr/>
                <img src="@Url.Content("~/images/Food.png")" height="64" width="64" alt="food"/>
                <hr/>
                <div class="well well-sm">
                    @Model.Food
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="well well-sm text-center">
                <h4>Grain</h4>
                <hr/>
                <img src="@Url.Content("~/images/Grain.png")" height="64" width="64" alt="grain"/>
                <hr/>
                <div class="well well-sm">
                    @Model.Grain
                </div>
            </div>
        </div>
    </div>
</div>
