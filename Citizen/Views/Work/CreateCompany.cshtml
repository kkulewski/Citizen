@model CreateCompanyViewModel

@{
    ViewData["Title"] = "Create company";
}

<h2>Create company</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>

<form asp-controller="Work" asp-action="CreateCompany" method="post" class="form-horizontal">
    <h4>Create new company</h4>
    <hr />
    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Product" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select class="form-control" asp-for="Product"
                    asp-items="@(new SelectList(@Model.ProductTypes))"></select>
            <span asp-validation-for="Product" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<div>
