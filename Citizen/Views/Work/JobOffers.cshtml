@model IEnumerable<JobOffer>

@{
    ViewData["Title"] = "Job offers";
}

<h2>Browse job offers</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>
@{
    if (Model.Count() == 0)
    {
        <div>No items to show.</div>

    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Company name
                    </th>
                    <th>
                        Owner
                    </th>
                    <th>
                        Product
                    </th>
                    <th>
                        Salary
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Company.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Company.Owner.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Company.Product)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Salary)
                        </td>
                        <td>
                            <a asp-action="Apply" asp-route-id="@item.Id">Apply</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

