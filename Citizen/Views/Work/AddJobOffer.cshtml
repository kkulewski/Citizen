@model AddJobOfferViewModel

@{
    ViewData["Title"] = "Add job offer";
}

<h2>Add job offer</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>

<form asp-controller="Work" asp-action="AddJobOffer" method="post" class="form-horizontal">
    <h4>Add new job offer.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Salary" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Salary" class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
    </div>
    <input type="hidden" asp-for="CompanyId" />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Add offer</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<div>
    <a asp-action="Company" asp-route-id="@Model.CompanyId">Back to List</a>
</div>

